{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": "tslint-config-airbnb",
  "rules": {
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "curly": false,
    "no-var-keyword": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "strict-boolean-expressions": false,
    "semicolon": [
      false,
      "never"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "no-internal-module": true,
    "no-trailing-whitespace": [
      true,
      "ignore-blank-lines"
    ],
    "no-null-keyword": false,
    "jsdoc-format": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "max-line-length": [
      true,
      150
    ],
    "no-increment-decrement": false,
    "eofline": false,
    "array-bracket-spacing": [
      true,
      "always"
    ],
    "ter-computed-property-spacing": [ false, "always" ],
    "align": false,
    "prefer-const": false,
    "ter-arrow-parens": false,
    "one-variable-per-declaration": false
  }
}
